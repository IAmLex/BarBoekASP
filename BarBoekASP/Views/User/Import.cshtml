@model ImportUsersModel
@{
    ViewData["Title"] = "Importeer leden";
}

<h2>@ViewData["Title"]</h2>

<form method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label class="title">Selecteer het leden bestand</label>
        <input asp-for="File" type="File">

        <span asp-validation-for="File" class="text-danger"></span>
    </div>

    <div class="form-group row ais">
        <input type="checkbox" id="RemoveCurrent" asp-for="RemoveCurrent">
        <label for="RemoveCurrent">Huidige leden verwijderen?</label>
    </div>

    <div class="form-group">
        <input type="submit" value="Importeren" class="btn add">
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
