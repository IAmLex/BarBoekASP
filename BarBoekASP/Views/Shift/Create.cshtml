@model ShiftCreateViewModel
@{
    ViewData["Title"] = "Shift";
}

<h2>create</h2>

<form asp-action="Create" method="POST">
    <div class="form-group">
        <span class="badge">Name</span>
        <input asp-for="@Model.newModel.Name" class="form-control" />
    </div>

    <div class="form-group">
        <span class="badge">Start</span>
        <input asp-for="@Model.newModel.StartMoment" class="form-control">
    </div>

    <div class="form-group">
        <span class="badge">Eind</span>
        <input asp-for="@Model.newModel.EndMoment" class="form-control">
    </div>

    <div class="form-group">
        <span class="badge">Event Type</span>
        <input asp-for="@Model.newModel.EventType" class="form-control">
    </div>

    <div class="form-group">
        <span class="badge">Max Aantal Leden</span>
        <input asp-for="@Model.newModel.MaxMemberCount" class="form-control">
    </div>

    <div class="form-group">
        <span class="badge">Name</span>
        <input asp-for="@Model.newModel.Members" class="form-control">
    </div>

    <input type="submit" name="name" value="submit" />
</form>