@model ShiftDetailViewModel
@{
    ViewData["Title"] = "edit shift";
}

<h2>Edit shift</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Name"/>

        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartMoment" class="control-label"></label>
        <input asp-for="StartMoment" class="form-control" placeholder="StartMoment"/>

        <span asp-validation-for="StartMoment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndMoment" class="control-label"></label>
        <input asp-for="EndMoment" class="form-control" placeholder="EndMoment"/>

        <span asp-validation-for="EndMoment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EventType" class="control-label"></label>
        <input asp-for="EventType" class="form-control" placeholder="EventType"/>

        <span asp-validation-for="EventType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaxMemberCount" class="control-label"></label>
        <input asp-for="MaxMemberCount" class="form-control" placeholder="MaxMemberCount"/>

        <span asp-validation-for="MaxMemberCount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="row sb">
            <input type="submit" class="btn" />
        </div>
    </div>
</form>